{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    "github>tscibilia/home-ops//.renovate/autoMerge.json5",
    "github>tscibilia/home-ops//.renovate/changeLogs.json5",
    "github>tscibilia/home-ops//.renovate/customManagers.json5",
    "github>tscibilia/home-ops//.renovate/grafanaDashboards.json5",
    "github>tscibilia/home-ops//.renovate/groups.json5",
    "github>tscibilia/home-ops//.renovate/labels.json5",
    "github>tscibilia/home-ops//.renovate/overrides.json5",
    "github>tscibilia/home-ops//.renovate/semanticCommits.json5",
    ":automergeBranch",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":semanticCommits",
    ":timezone(America/New_York)",
  ],
  assignees: ["tscibilia"],
  dependencyDashboard: true,
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  dependencyDashboardApproval: false,
  platformAutomerge: true,
  prConcurrentLimit: 0,
  prHourlyLimit: 10,
  suppressNotifications: [
    "prEditedNotification",
    "prIgnoreNotification",
  ],
  ignorePaths: [
    "**/*.sops.*",
    "**/resources/**",
  ],
  flux: {
    managerFilePatterns: ["/\\.yaml(?:\\.j2)?$/"],
  },
  "helm-values": {
    managerFilePatterns: ["/\\.yaml(?:\\.j2)?$/"],
  },
  kubernetes: {
    managerFilePatterns: ["/\\.yaml(?:\\.j2)?$/"],
  },
}
